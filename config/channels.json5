// OpenClaw Channel Configuration
// Secrets referenced via ${VAR} from .env
{
  "discord": {
    "enabled": true,
    "token": "${DISCORD_BOT_TOKEN}",
    "groupPolicy": "allowlist",
    "guilds": {
      "${DISCORD_SERVER_ID_DEV}": {},
      "${DISCORD_SERVER_ID_OPS}": {}
    }
  },
  "imessage": {
    "enabled": true,
    "cliPath": "imsg",
    "dmPolicy": "pairing",
    "groupAllowFrom": [
      "${IMESSAGE_PHONE}"
    ],
    "groupPolicy": "allowlist"
  }
}
