{
  "$integrations": ["jira", "signoz", "discord", "docker"],

  // Canonical state file path (avoid duplicates in workspace-jira-resolver/)
  "state_file": "memory/jira-resolver-state.json",

  // Project-specific: loaded from projects/otel-demo/
  "project": { "$include": "../../../projects/otel-demo/integrations.json5" },
  "services": { "$include": "../../../projects/otel-demo/services.json5" },
  "thresholds": { "$include": "../../../projects/otel-demo/thresholds.json5" },

  // General: ticket resolution framework (reusable across projects)
  "jira_behavior": {
    "workflow": {
      "auto_progress": true,
      "auto_review": true,
      "auto_complete": true,
      "auto_reopen": true
    },
    "priority": ["Highest", "High", "Medium", "Low"]
  },
  "discord_behavior": {
    "channels": {
      "status_updates": "bug_reporting",
      "daily_summary": "day_review"
    }
  },
  "coordination": {
    "check_lock_file": "../../shared/stress-test.lock",
    "action_when_locked": "skip_restart",
    "log_when_locked": true
  },
  "actions": {
    "restart": { "enabled": true, "max_retries": 3, "cooldown_minutes": 5, "verification_delay_seconds": 30 },
    "scale": { "enabled": false, "max_replicas": 3, "min_replicas": 1 },
    "log_cleanup": { "enabled": true, "max_log_size_mb": 500 }
  },
  "docker": {
    "safe_commands": ["docker ps", "docker logs", "docker stats", "docker inspect", "docker exec <container> ps", "docker exec <container> netstat", "docker exec <container> ping"],
    "forbidden_commands": ["docker rm", "docker rmi", "docker-compose down", "docker exec <container> rm -rf"]
  },
  "verification": {
    "enabled": true,
    "wait_minutes": 5,
    "check_signoz_metrics": true,
    "retry_on_failure": { "enabled": true, "max_retries": 3, "backoff_minutes": 5, "escalate_priority_on_max_retry": true }
  },
  "monitoring": {
    "check_interval_minutes": 5,
    "daily_report_enabled": true,
    "daily_report_time": "23:15",
    "log_all_actions": true
  },
  "safety": {
    "require_verification": true,
    "max_auto_actions_per_run": 5
  }
}
